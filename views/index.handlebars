<h1>Burgers</h1>



<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/not-devoured-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Cats that are sleepy!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/not-devoured-block devoured=false}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Devoured?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Devoured!<br>
    <input type="radio" name="sleepy" value="0"> Eat
  </div>

  <button type="submit">Add Burger</button>
</form>
